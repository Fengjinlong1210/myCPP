class Solution {
public:
    double Pow(double x, int n)
    {
        if(n == 0)
        {
            return 1;
        }
        double tmp = Pow(x, n / 2);
        if(n % 2 == 0)
            return tmp * tmp;
        else
            return tmp * tmp * x;
    }

    double myPow(double x, int n) 
    {
        long long m = n; 
        if(n > 0)
        {
            return Pow(x, m);
        }
        else 
        {
            return (double)1 / Pow(x, -m);
        }
    }
};