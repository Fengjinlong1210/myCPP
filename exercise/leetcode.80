//删除数组中重复项2
class Solution {
public:
    int removeDuplicates(vector<int>& nums) 
    {
        int k = 2;
        if(nums.size() <= k)
        {
            return nums.size();
        }
        //不需要管前k个元素，即使是重复也没关系
        int left = k;
        int right = k;
        while(right < nums.size())
        {
            //允许left和right之间出现k个相同的元素
            if(nums[left - k] != nums[right])
            {
                nums[left++] = nums[right];
            }
            right++;
        }
        return left;
    }
};